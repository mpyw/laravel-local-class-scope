{
    "name": "mpyw/laravel-local-class-scope",
    "description": "A tiny macro that reuse a global scope class as a local scope",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "mpyw",
            "email": "ryosuke_i_628@yahoo.co.jp"
        }
    ],
    "keywords": ["scope", "eloquent", "laravel", "illuminate", "database", "query", "builder", "macro"],
    "autoload": {
        "psr-4": {
            "Mpyw\\LaravelLocalClassScope\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mpyw\\LaravelLocalClassScope\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "illuminate/database": "^11.0 || ^12.0 || ^13.0",
        "illuminate/support": "^11.0 || ^12.0 || ^13.0"
    },
    "require-dev": {
        "orchestra/testbench": "*",
        "orchestra/testbench-core": ">=9.0",
        "phpunit/phpunit": ">=11.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Mpyw\\LaravelLocalClassScope\\LocalClassScopeServiceProvider"
            ]
        }
    }
}
